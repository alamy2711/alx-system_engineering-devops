#!/usr/bin/env bash
# Redirection
# REDIRECT="\n\tlocation /redirect_me {\n\t\treturn 301 https://github.com/alamy2711; \n\t}\n"
# REDIRECT_URL="https://github.com/alamy2711;"
FILE="/etc/nginx/sites-available/default"
REDIRECT_RULE="rewrite ^/redirect_me https://github.com/alamy2711 permanent;"

sudo apt-get -y update
sudo apt-get -y install nginx

ufw allow 'Nginx HTTP'

echo -e "Hello World!" | dd status=none of=/var/www/html/index.nginx-debian.html

sudo sed -i "/server {/a \ \ \ \ location \/redirect_me { $REDIRECT_RULE }" $FILE

sudo service nginx restart
